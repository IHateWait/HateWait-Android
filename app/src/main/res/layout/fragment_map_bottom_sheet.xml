<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_radius"
        android:paddingHorizontal="32dp"
        android:paddingTop="24dp"
        android:paddingBottom="40dp">

    <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="false"
            app:behavior_peekHeight="70dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="미미면가"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="- 028392039"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="- 영업시간: 07:00-04:00 월요일 휴무"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="- 500명 수용가능 "
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="- 재료소진 시 영업종료"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="- 대기인원 0명"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        <!--    <Button-->
        <!--            android:id="@+id/button_bottom_sheet"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="#1c9d9e"-->
        <!--            android:textColor="@android:color/white"-->
        <!--            android:textStyle="bold"-->
        <!--            android:text="좋아요!" />-->

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="닫기"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:rippleColor="#2B8A19" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>