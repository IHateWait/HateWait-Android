<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".storeinfo.StoreSignUp2">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/register_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light">

        <TextView
                android:id="@+id/register_toolbar_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_register_menu_title"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/store_name_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_baseline_storefront_24"
            app:startIconContentDescription="Name"
            app:endIconMode="clear_text"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_toolbar2">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/store_name_input_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="가게명을 입력해주세요"
                android:inputType="text"
                android:selectAllOnFocus="true"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/store_info_description_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/store_info_icon"
            app:startIconContentDescription="Name"
            app:counterMaxLength="11"
            app:endIconMode="clear_text"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/store_name_input_layout"
            app:layout_constraintEnd_toEndOf="@id/store_name_input_layout"
            app:layout_constraintTop_toBottomOf="@id/store_name_input_layout">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/store_info_description_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="가게를 소개하는 문구를 적어주세요"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/register_progress_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/store_info_description_layout"
            app:layout_constraintEnd_toEndOf="@id/store_info_description_layout"
            android:text="2/4"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"/>
    <ProgressBar
            android:id="@+id/register_progressbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:progress="2"
            android:max="4"
            app:layout_constraintStart_toStartOf="@id/store_info_description_layout"
            app:layout_constraintEnd_toEndOf="@id/store_info_description_layout"
            app:layout_constraintTop_toBottomOf="@id/register_progress_textView"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <Button
            android:id="@+id/button_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/store_info_description_layout"
            app:layout_constraintEnd_toEndOf="@id/store_info_description_layout"
            app:layout_constraintTop_toBottomOf="@id/register_progressbar"
            android:enabled="false"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="계속하기"
            android:textSize="25dp"
            android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>