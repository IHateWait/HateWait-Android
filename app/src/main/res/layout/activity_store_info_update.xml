<!--                    android:layout_height="wrap_content"-->
<!--                    app:startIconDrawable="@drawable/phone_icon"-->
<!--                    app:startIconContentDescription="Name"-->
<!--                    app:counterMaxLength="11"-->
<!--                    app:endIconMode="clear_text">-->

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                        android:id="@+id/store_phone_number_editText"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:enabled="true"-->
<!--                        android:text="02XXXXXXXX"-->
<!--                        android:inputType="phone"-->
<!--                        android:selectAllOnFocus="true"/>-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

        </LinearLayout>

        <LinearLayout
                android:id="@+id/store_business_hours_layout"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:baselineAligned="true"
                app:layout_constraintTop_toBottomOf="@+id/store_phone_number_layout">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/store_item_text"
                    android:layout_gravity="center"
                    android:text="영업시간"/>

            <TextView
                    android:id="@+id/store_business_hours_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/store_input_left_margin"
                    android:text="매일 08:00 ~ 22:00 (휴무일: X)" />

            <!--            <EditText-->
            <!--                    android:id="@+id/store_phone_number_editText"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginLeft="@dimen/store_input_left_margin"-->
            <!--                    android:enabled="false"-->
            <!--                    android:hint="가게 전화번호를 입력하세요"-->
            <!--                    android:text="02-XXXX-XXXX"-->
            <!--                    android:inputType="phone"/>-->
        </LinearLayout>

        <LinearLayout
                android:id="@+id/store_menu_picture_layout"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/store_business_hours_layout">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="메뉴판"/>
            <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/startbucks_menu"/>

        </LinearLayout>

            <Button
                    android:id="@+id/update_store_info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingHorizontal="@dimen/register_button_padding_horizontal"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:text="수정완료"
                    android:enabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/store_menu_picture_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>