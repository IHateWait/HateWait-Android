<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:plainpie="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.StampFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

        <!--        <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="0dp"-->
        <!--                android:layout_weight="2"-->
        <!--                android:background="#105193"-->
        <!--                android:gravity="center"-->
        <!--                android:text="스탬프 프래그먼트"-->
        <!--                android:textColor="@color/white"-->
        <!--                android:textSize="25sp" />-->


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:elevation="0dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="8번 더 방문하면 자몽에이드!"
                        android:textColor="#979797"
                        android:textSize="22sp" />

                <com.app.progresviews.ProgressWheel
                        android:id="@+id/pieView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barWidth="30dp"
                        app:countText="4/12"
                        app:countTextColor="@android:color/black"
                        app:countTextSize="20sp"
                        app:defTextColor="@android:color/black"
                        app:defTextSize="15sp"
                        app:definitionText="Stamps"
                        app:marginBtwText="15dp"
                        app:percentage="90"
                        app:progressColor="@color/colorPrimary" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:elevation="0dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_margin="5dp">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1주일" />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1개월" />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3개월" />
            </LinearLayout>

            <!--        </androidx.cardview.widget.CardView>-->

            <!--        <androidx.cardview.widget.CardView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_marginVertical="2dp"-->
            <!--                android:layout_weight="5.2"-->
            <!--                android:elevation="0dp"-->
            <!--                app:cardCornerRadius="10dp">-->

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stamp_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>