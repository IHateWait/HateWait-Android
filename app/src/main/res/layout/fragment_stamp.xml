<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:plainpie="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".customer.StampFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

        <!--        <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="0dp"-->
        <!--                android:layout_weight="2"-->
        <!--                android:background="#105193"-->
        <!--                android:gravity="center"-->
        <!--                android:text="스탬프 프래그먼트"-->
        <!--                android:textColor="@color/white"-->
        <!--                android:textSize="25sp" />-->


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3.5"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="10dp">

                <com.app.progresviews.ProgressWheel
                        android:id="@+id/pieView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/stamp_description"
                        app:barWidth="25dp"
                        app:countText="4/12"
                        app:countTextColor="@android:color/black"
                        app:countTextSize="20sp"
                        app:defTextColor="@android:color/black"
                        app:defTextSize="15sp"
                        app:definitionText="Stamps"
                        app:marginBtwText="15dp"
                        app:percentage="90"
                        app:progressColor="@color/colorPrimary" />

                <TextView
                        android:id="@+id/stamp_description"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:text="8번 더 방문하면 자몽에이드!"
                        android:textColor="#979797"
                        android:textSize="22sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="6.5"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1주일"
                                android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1개월"
                                android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="3개월"
                                android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--        </androidx.cardview.widget.CardView>-->

                <!--        <androidx.cardview.widget.CardView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="0dp"-->
                <!--                android:layout_marginVertical="2dp"-->
                <!--                android:layout_weight="5.2"-->
                <!--                android:elevation="0dp"-->
                <!--                app:cardCornerRadius="10dp">-->

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/stamp_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>