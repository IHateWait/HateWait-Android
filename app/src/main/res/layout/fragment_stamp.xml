<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".member.StampFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:weightSum="10">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <com.app.progresviews.ProgressWheel
                        android:id="@+id/stamp_pie_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:padding="20dp"
                        app:barWidth="40dp"
                        app:countText="4/12"
                        app:countTextColor="@android:color/black"
                        app:countTextSize="50sp"
                        app:percentage="33"
                        app:progressColor="@color/colorPrimary" />

                <!--                        app:defTextColor="@android:color/black"-->
                <!--                        app:defTextSize="20sp"-->
                <!--                        app:definitionText=""-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/stamp_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="쿠폰 발행까지 \n7번 남았습니다."
                            android:textColor="#979797"
                            android:textSize="28sp" />

                    <!--                <TextView-->
                    <!--                        android:id="@+id/stamp_description2"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:gravity="center_horizontal"-->
                    <!--                        android:layout_marginTop="20dp"-->
                    <!--                        android:text="방문 시간 기준 24시간 후 자동 발급됩니다."-->
                    <!--                        android:textColor="#979797"-->
                    <!--                        android:textSize="18sp" />-->
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>