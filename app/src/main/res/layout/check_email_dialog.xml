<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_radius">


    <TextView
            android:id="@+id/email_check_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="05:00"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_code_check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            app:endIconMode="clear_text"
            app:startIconContentDescription="ID"
            app:startIconDrawable="@drawable/custom_id_icon">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_code_check_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/id_check_hint"
                android:inputType="text"
                android:selectAllOnFocus="true" />
    </com.google.android.material.textfield.TextInputLayout>

