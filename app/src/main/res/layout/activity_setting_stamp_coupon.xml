            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/setting_stamp_toolbar"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="스탬프 및 쿠폰 기능"
