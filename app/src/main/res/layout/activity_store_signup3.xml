    <!--            android:id="@+id/store_address_input_layout"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            style="@style/marginHorizontal"-->
    <!--            android:layout_marginTop="8dp"-->
    <!--            app:endIconMode="clear_text">-->

