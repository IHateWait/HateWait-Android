<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:visibility="visible"
        tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
            android:id="@+id/nextClientCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp">

        <TextView
                android:id="@+id/nextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="다음 순서: "

                />
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:id="@+id/greeting"
            android:layout_below="@+id/nextClientCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/greetStoreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="건대족발 회원님 환영합니다."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
                android:id="@+id/waitingnumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30명 대기중"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
    </LinearLayout>




   <LinearLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:id="@+id/listBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:gravity="center"

                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_gravity="center">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_gravity="center">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="2dp">

                    <TextView
                            android:id="@+id/clientView"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:text="대기 현황 확인"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#ffffff" />

                </androidx.cardview.widget.CardView>


                <ImageButton
                        android:id="@+id/delBtn"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/test"
                        android:clickable="true"
                        android:scaleType="centerInside" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/tabletBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_gravity="center"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_gravity="center">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="2dp">

                    <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:text="태블릿 버전"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#ffffff" />
                </androidx.cardview.widget.CardView>


                <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/touchipad"
                        android:clickable="true"
                        android:scaleType="centerInside" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:id="@+id/store_info_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_gravity="center"
                android:layout_weight="1">

            <LinearLayout
                    android:id="@+id/store_info_update_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_gravity="center">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="0dp">

                    <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="가게 정보 수정"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#ffffff" />

                </androidx.cardview.widget.CardView>

                <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/shop"
                        android:clickable="true"
                        android:scaleType="centerInside"
                        app:srcCompat="@null" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
       </LinearLayout>

   </LinearLayout>

</RelativeLayout>